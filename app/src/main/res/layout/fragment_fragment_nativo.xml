<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".FragmentNativo" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:id="@+id/txtNativoJNI"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/btnCallNativeCode"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/btnCallNativeCode"
            app:layout_constraintBottom_toBottomOf="@+id/btnCallNativeCode" tools:visibility="Time C++"/>
    <Button
            android:text="Native session 3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCallNativeCode"
            app:layout_constraintStart_toStartOf="@+id/checkBMulti"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/checkBMulti" android:layout_marginTop="8dp"/>
    <Button
            android:text="C++ OpenMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNativeHistogram"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/txtNativoJNI"
            app:layout_constraintStart_toStartOf="@+id/btnCallNativeCode"/>
    <TextView
            android:text="Time Histogram OpenMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHistogramNative"
            app:layout_constraintTop_toTopOf="@+id/btnNativeHistogram"
            app:layout_constraintBottom_toBottomOf="@+id/btnNativeHistogram"
            app:layout_constraintStart_toEndOf="@+id/btnNativeHistogram" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="18sp"/>
    <CheckBox
            android:text="Multi-Thread C++"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBMulti" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.37"/>

</androidx.constraintlayout.widget.ConstraintLayout>