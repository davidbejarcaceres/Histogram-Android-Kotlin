<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#333300"
                android:textSize="25dp"
                android:text="Dimensión de la matriz:" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#66CC00"
                android:hint="Dimensión"
                android:inputType="number"
                android:digits="1234567890"
                android:ems="10"
                android:id="@+id/Dimension" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#336600"
                android:textSize="25dp"
                android:text="Escoge una opción:"
                android:id="@+id/textView" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/radiogroup1">

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="Java"
                        android:id="@+id/Java"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="Java 1D"
                        android:id="@+id/Java1D"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="C (1 thread)"
                        android:id="@+id/NativeC"/>

            </RadioGroup>

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/radiogroup2">

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="C (4 threads)"
                        android:id="@+id/NativeCpar" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="Neon (4 thrds)"
                        android:id="@+id/NativeCneon" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#33FF33"
                        android:textSize="16dp"
                        android:text="Neon+Tile+4thr"
                        android:id="@+id/NativeCtile" />
            </RadioGroup>

        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#33CC00"
                android:text="¡CALCULA!"
                android:onClick="cCalcula"
                android:id="@+id/Calcula" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#339900"
                android:textSize="25dp"
                android:text="Tiempo de ejecución:"
                android:id="@+id/textView2" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:ems="10"
                android:textSize="25dp"
                android:textColor="#66CC00"
                android:id="@+id/Resultado" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="340dp">

    </LinearLayout>
</RelativeLayout>